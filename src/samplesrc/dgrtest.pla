  for k = 15 downto 0
    dgrClear(k)
  next
  setlinespans(@dgrHLin, @dgrVLin)
  for l = 0 to 79
    dgrColor(l)
    linespans(0, 0, l, 47)
  next
  for l = 47 downto 0
    dgrColor(l)
    linespans(0, 0, 79, l)
  next
  ii = 2
  ij = -1
  i = 40
  j = 10
  ^$C010
  dgrDrawBuf(dgrPage2)
  while ^$C000 < 128
    dgrFill(k, k, @tile1)
    dgrBLT(i, j, 8, 8, @sprite1)
